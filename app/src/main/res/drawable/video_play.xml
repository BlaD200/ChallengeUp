<vector xmlns:android="http://schemas.android.com/apk/res/android"
    android:width="38dp"
    android:height="38dp"
    android:viewportWidth="12"
    android:viewportHeight="12">

    <!-- Translate the canvas, then rotate, then scale, then draw the play icon. -->
    <group
        android:pivotX="6"
        android:pivotY="6"
        android:scaleX="1.5">
        <group
            android:pivotX="6"
            android:pivotY="6"
            android:rotation="0">
            <group android:translateX="2">
                <!-- This path draws an orange triangular play icon. -->
                <path
                    android:name="play_path"
                    android:fillColor="#d9d9d9"
                    android:pathData="M 2,2.5 L 2,9.5 L 6,6 Z" />
            </group>
        </group>
    </group>

</vector>