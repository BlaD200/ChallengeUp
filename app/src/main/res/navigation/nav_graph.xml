<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/newsFeed">
    <fragment
        android:id="@+id/timeChallenges"
        android:name="com.example.challengeup.fragment.TimeChallenges"
        android:label="fragment_time_challenges"
        tools:layout="@layout/fragment_time_challenges" />
    <fragment
        android:id="@+id/challenges"
        android:name="com.example.challengeup.fragment.Challenges"
        android:label="fragment_challenges"
        tools:layout="@layout/fragment_challenges" >
        <action
            android:id="@+id/action_challenges_to_challenge"
            app:destination="@id/challenge" />
    </fragment>
    <fragment
        android:id="@+id/newsFeed"
        android:name="com.example.challengeup.fragment.NewsFeed"
        android:label="fragment_news_feed"
        tools:layout="@layout/fragment_news_feed" />
    <fragment
        android:id="@+id/profile"
        android:name="com.example.challengeup.fragment.Profile"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <argument
            android:name="uid"
            app:argType="string"
            app:nullable="true"
            android:defaultValue="@null" />
    </fragment>

    <fragment
        android:id="@+id/createChallenge"
        android:name="com.example.challengeup.fragment.CreateChallenge"
        android:label="fragment_create_challenge"
        tools:layout="@layout/fragment_create_challenge" />

    <fragment
        android:id="@+id/savedChallenges"
        android:name="com.example.challengeup.fragment.SavedChallenges"
        android:label="fragment_saved_challenges"
        tools:layout="@layout/fragment_saved_challenges" />
    <fragment
        android:id="@+id/shop"
        android:name="com.example.challengeup.fragment.Shop"
        android:label="fragment_shop"
        tools:layout="@layout/fragment_shop" />
    <fragment
        android:id="@+id/topChallenges"
        android:name="com.example.challengeup.fragment.TopChallenges"
        android:label="fragment_top_challenges"
        tools:layout="@layout/fragment_top_challenges" >
        <action
            android:id="@+id/action_topChallenges_to_challenge"
            app:destination="@id/challenge" />
    </fragment>
    <fragment
        android:id="@+id/topPlayers"
        android:name="com.example.challengeup.fragment.TopPlayers"
        android:label="fragment_top_players"
        tools:layout="@layout/fragment_top_players" >
        <action
            android:id="@+id/action_topPlayers_to_profile"
            app:destination="@id/profile" />
    </fragment>
    <fragment
        android:id="@+id/achievements"
        android:name="com.example.challengeup.fragment.Achievements"
        android:label="fragment_achievements"
        tools:layout="@layout/fragment_achievements" />
    <fragment
        android:id="@+id/settings"
        android:name="com.example.challengeup.fragment.Settings"
        android:label="fragment_settings"
        tools:layout="@layout/fragment_settings" />

    <fragment
        android:id="@+id/challenge"
        android:name="com.example.challengeup.fragment.Challenge"
        android:label="fragment_challenge"
        tools:layout="@layout/fragment_challenge" >
        <argument
            android:name="challengeId"
            app:argType="string" />
    </fragment>
    <fragment
        android:id="@+id/stats"
        android:name="com.example.challengeup.fragment.Stats"
        android:label="fragment_stats"
        tools:layout="@layout/fragment_stats" />
    <fragment
        android:id="@+id/achievement"
        android:name="com.example.challengeup.fragment.Achievement"
        android:label="fragment_achievement"
        tools:layout="@layout/fragment_achievement" />
</navigation>